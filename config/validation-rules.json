  "categorySpecificRules": {
    "fashion": {
      "productType": ["SHIRT", "PANTS", "DRESS", "SHOES", "ACCESSORY"],
      "requiredFields": ["brand", "productTitle", "size", "color", "material"],
      "titleFormat": "{Brand} {Gender} {ProductType} {Material} {Size} {Color}",
      "titleMaxLength": 200,
      "bulletPoints": {
        "maxCount": 5,
        "recommended": ["Material composition", "Care instructions", "Fit type", "Closure type", "Special features"]
      },
      "images": {
        "mainImage": "Product on white background, no model for flat lays",
        "lifestyleImages": "Model wearing product encouraged",
        "minImages": 3
      },
      "prohibitedInTitle": ["sale", "discount", "promo", "offer", "deal"]
    },
    "home_garden": {
      "productType": ["FURNITURE", "DECOR", "KITCHEN", "GARDEN", "BEDDING"],
      "requiredFields": ["brand", "productTitle", "dimensions", "material", "color"],
      "titleFormat": "{Brand} {ProductType} {Material} {Color} {Size/Dimensions}",
      "titleMaxLength": 200,
      "bulletPoints": {
        "maxCount": 5,
        "recommended": ["Dimensions", "Material", "Assembly required", "Care instructions", "Weight capacity"]
      },
      "dimensions": {
        "required": true,
        "units": ["cm", "m", "kg"],
        "format": "Length x Width x Height"
      }
    },
    "electronics": {
      "productType": ["CONSUMER_ELECTRONICS", "COMPUTER", "CAMERA", "AUDIO"],
      "requiredFields": ["brand", "productTitle", "model", "specifications"],
      "titleMaxLength": 200,
      "bulletPoints": {
        "maxCount": 5,
        "recommended": ["Key specifications", "Compatibility", "What's in the box", "Warranty", "Special features"]
      },
      "prohibitedClaims": ["fastest", "most powerful", "revolutionary", "patented" ]
    },
    "health_beauty": {
      "productType": ["BEAUTY", "HEALTH_PERSONAL_CARE", "COSMETICS"],
      "requiredFields": ["brand", "productTitle", "ingredients", "volume"],
      "titleMaxLength": 200,
      "strictProhibitions": true,
      "prohibitedClaims": [
        "All medical/health claims", "Anti-aging", "Wrinkle removal",
        "Skin whitening", "FDA approved", "Clinically proven"
      ],
      "allowedClaims": ["moisturizing", "nourishing", "gentle", "suitable for"],
      "ingredientsRequired": true
    },
    "toys_baby": {
      "productType": ["TOY", "BABY_PRODUCT"],
      "requiredFields": ["brand", "productTitle", "ageRange", "safetyWarnings"],
      "titleMaxLength": 200,
      "safetyRequired": true,
      "certifications": ["CE", "EN71", "REACH", "CPSIA"],
      "choking": {
        "warningRequired": "For products with small parts",
        "ageRestriction": "Not suitable for children under 3"
      }
    }
  },

  "aplusContentRules": {
    "basic": {
      "maxModules": 5,
      "availableModules": [
        "StandardCompanyLogo", "StandardSingleImageSpecsDetail",
        "StandardThreeImageText", "StandardFourImageText",
        "StandardMultipleImageTextModule", "StandardProductDescription",
        "StandardHeaderImageText", "StandardImageTextOverlay", "StandardTechSpecs"
      ],
      "textLimits": {
        "headline": 100,
        "paragraph": 2000,
        "shortText": 500
      },
      "imageLimits": {
        "minWidth": 970,
        "minHeight": 300,
        "maxFileSize": 5242880,
        "noSmallText": "Text must be readable on mobile (min 18pt)"
      }
    },
    "premium": {
      "maxModules": 7,
      "brandStoryRequired": true,
      "availableModules": [
        "StandardHeroImageTextBlock", "StandardVideoBlock",
        "StandardCarouselModule", "StandardProductComparisonTable",
        "StandardFAQModule", "StandardTimelineModule"
      ]
    }
  },

  "gpsrRules": {
    "effectiveDate": "2024-12-13",
    "required": true,
    "description": "EU General Product Safety Regulation (GPSR) - Required from Dec 13, 2024",
    "requiredFields": {
      "manufacturer": {
        "name": {"required": true, "maxLength": 100},
        "address": {"required": true, "maxLength": 200},
        "email": {"required": true, "format": "email"},
        "phone": {"required": false, "format": "E.164"}
      },
      "responsiblePerson": {
        "name": {"required": true, "maxLength": 100},
        "address": {"required": true, "maxLength": 200},
        "email": {"required": true, "format": "email"},
        "phone": {"required": false, "format": "E.164"}
      },
      "safetyDocuments": {
        "safetyInformation": {
          "required": true,
          "formats": ["PDF"],
          "maxFileSize": 10485760,
          "description": "Product safety information document"
        },
        "complianceDocument": {
          "required": false,
          "formats": ["PDF"],
          "description": "CE certificate, test reports, etc."
        },
        "userManual": {
          "required": false,
          "formats": ["PDF"],
          "languages": ["Language of target marketplace"],
          "description": "User manual in marketplace language"
        }
      },
      "warningLabels": {
        "image": {
          "required": false,
          "formats": ["JPEG", "PNG"],
          "description": "Warning label image (if applicable)"
        }
      }
    },
    "marketplaceSpecific": {
      "EU": ["DE", "FR", "IT", "ES", "NL", "PL", "SE", "BE", "IE"],
      "exemptions": []
    }
  },

  "documentRules": {
    "userManual": {
      "formats": ["PDF"],
      "maxFileSize": 10485760,
      "languageRequired": true,
      "description": "User manual in marketplace language"
    },
    "complianceCertificate": {
      "formats": ["PDF", "JPEG", "PNG"],
      "maxFileSize": 5242880,
      "types": ["CE", "RoHS", "REACH", "FCC", "ISO"],
      "description": "Compliance certificates"
    },
    "warrantyCard": {
      "formats": ["PDF"],
      "maxFileSize": 2097152,
      "description": "Warranty information"
    }
  },

  "validationLevels": {
    "error": {
      "blocking": true,
      "description": "Critical errors - export blocked unless override enabled"
    },
    "warning": {
      "blocking": false,
      "description": "Warnings - export allowed but user should review"
    },
    "info": {
      "blocking": false,
      "description": "Informational - suggestions for improvement"
    }
  }
}
