{
  "version": "2025.1",
  "effectiveDate": "2025-01-21",
  "description": "Amazon Listings Validation Rules - EU Marketplaces (Updated Jan 2025)",

  "globalRules": {
    "title": {
      "maxLength": 200,
      "maxWordRepetition": 2,
      "prohibitedCharacters": ["!", "$", "?", "_", "{", "}", "^", "¬", "¦"],
      "allowedCharactersInBrand": ["!", "$", "?", "_", "{", "}", "^", "¬", "¦"],
      "description": "Title max 200 chars, no special chars unless in brand name, same word max 2x"
    },
    "bulletPoints": {
      "maxCount": 5,
      "maxLength": 500,
      "minRecommended": 3,
      "description": "Amazon allows up to 5 bullet points, 500 chars each"
    },
    "description": {
      "maxLength": 2000,
      "allowHTML": false,
      "description": "Product description max 2000 characters, no HTML"
    },
    "keywords": {
      "maxLength": 250,
      "maxBytes": 249,
      "separator": " ",
      "description": "Generic keywords max 250 chars (249 bytes), space-separated"
    },
    "brand": {
      "maxLength": 50,
      "required": true,
      "description": "Brand name required, max 50 chars"
    },
    "images": {
      "main": {
        "required": true,
        "minWidth": 1000,
        "minHeight": 1000,
        "recommended": {
          "width": 2000,
          "height": 2000
        },
        "maxFileSize": 10485760,
        "formats": ["JPEG", "PNG", "GIF"],
        "backgroundColor": "white",
        "backgroundRGB": [255, 255, 255],
        "noText": true,
        "noLogos": true,
        "noWatermarks": true,
        "description": "Main image: 1000x1000 min (2000x2000 recommended), white background, no text/logos"
      },
      "additional": {
        "maxCount": 8,
        "minWidth": 500,
        "minHeight": 500,
        "maxFileSize": 10485760,
        "formats": ["JPEG", "PNG", "GIF"],
        "allowText": true,
        "allowLifestyle": true,
        "description": "Additional images: 500x500 min, lifestyle and infographics allowed"
      }
    }
  },

